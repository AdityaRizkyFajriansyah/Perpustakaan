generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STUDENT
}

enum BookFormat {
  PHYSICAL
  DIGITAL
}

enum BorrowStatus {
  DIPINJAM
  DIKEMBALIKAN
}

enum ReservationStatus {
  ACTIVE
  READY
  FULFILLED
  CANCELLED
  EXPIRED
}

enum NotificationStatus {
  UNREAD
  READ
}

enum NotificationType {
  DUE_SOON
  OVERDUE
  RESERVATION_READY
  SYSTEM
}

enum AccountStatus {
  ACTIVE
  RETURN_ONLY
  INACTIVE
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  nisn      String?    @unique
  kelas     String?
  accountStatus AccountStatus @default(ACTIVE)
  statusChangedAt DateTime?
  statusReason String?
  failedLoginCount Int @default(0)
  lockUntil DateTime?
  lastFailedLoginAt DateTime?
  lastPromotedAt DateTime?
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret String?
  twoFactorTempSecret String?
  role      Role       @default(STUDENT)
  createdAt DateTime   @default(now())

  borrowings Borrowing[]
  reservations Reservation[]
  notifications Notification[]
  auditLogs  AuditLog[]

  @@index([role])
  @@index([nisn])
  @@index([accountStatus])
  @@index([statusChangedAt])
  @@index([lockUntil])
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[]
}

model Book {
  id         Int       @id @default(autoincrement())
  title      String
  author     String
  isbn       String    @unique
  year       Int
  description String?
  stock      Int       @default(0)
  format     BookFormat @default(PHYSICAL)
  filePath   String?
  fileName   String?
  fileSize   Int?
  mimeType   String?
  coverPath  String?
  coverName  String?
  coverSize  Int?
  coverMimeType String?

  categoryId Int
  category   Category  @relation(fields: [categoryId], references: [id])

  borrowings Borrowing[]
  reservations Reservation[]

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([title])
  @@index([author])
  @@index([categoryId])
  @@index([format])
}

model Borrowing {
  id         Int         @id @default(autoincrement())

  userId     Int
  user       User        @relation(fields: [userId], references: [id])

  bookId     Int
  book       Book        @relation(fields: [bookId], references: [id])

  status     BorrowStatus @default(DIPINJAM)
  borrowDate DateTime     @default(now())
  dueDate    DateTime
  returnDate DateTime?
  lateDays   Int         @default(0)
  lateFee    Int         @default(0)

  @@index([userId])
  @@index([bookId])
  @@index([status])
  @@index([borrowDate])
}

model Reservation {
  id         Int               @id @default(autoincrement())
  userId     Int
  user       User              @relation(fields: [userId], references: [id])
  bookId     Int
  book       Book              @relation(fields: [bookId], references: [id])
  status     ReservationStatus @default(ACTIVE)
  readyAt    DateTime?
  expiresAt  DateTime?
  fulfilledAt DateTime?
  cancelledAt DateTime?
  createdAt  DateTime          @default(now())

  @@index([userId])
  @@index([bookId])
  @@index([status])
}

model Notification {
  id         Int               @id @default(autoincrement())
  userId     Int
  user       User              @relation(fields: [userId], references: [id])
  title      String
  message    String
  type       NotificationType
  status     NotificationStatus @default(UNREAD)
  entity     String?
  entityId   Int?
  createdAt  DateTime          @default(now())
  readAt     DateTime?

  @@index([userId])
  @@index([status])
  @@index([type])
  @@index([createdAt])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String
  entity    String
  entityId  Int?
  ipAddress String?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([action])
  @@index([entity])
  @@index([userId])
  @@index([createdAt])
}

model LoginRateLimitBlock {
  id           Int      @id @default(autoincrement())
  ip           String   @unique
  strikeCount  Int      @default(0)
  blockedUntil DateTime?
  lastHitAt    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([blockedUntil])
}
